{
	"name": "linkaboard",
	"private": true,
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @linkaboard/db db:push",
		"db:studio": "turbo -F @linkaboard/db db:studio",
		"db:generate": "turbo -F @linkaboard/db db:generate",
		"db:migrate": "turbo -F @linkaboard/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@types/node": "^22.19.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"tsdown": "^0.15.12",
		"turbo": "^2.6.0"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "pnpm@10.20.0"
}
